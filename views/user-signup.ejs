<h1>
    User <%=title%>
</h1>
<form action="/user/create" method="post" >
    <input type="text" name="name" placeholder="Please Enter Your Name" required>
    <input type="email" name="email" placeholder="Please Enter Your Email" required>
    <input type="password" name="password" placeholder="Please Enter the Password" required>
    <input type="password" name="confirm_password" placeholder="Please Confirm Password" required>
    <input type="submit" value="Sign UP">
</form>

<p>
    <a href="/user/auth/google">Google Sign In/Sign Up</a>
</p>